<ul id="dropdown1" class="dropdown-content ">
  <li><%= link_to 'Patients', patients_path, class:'blue-text'%></li>
  <li><%= link_to 'Appointments', '#', class:'blue-text'%></li>
  <li><%= link_to 'Edit Profile', edit_user_registration_path(current_user), class:'blue-text' %></li>
  <li><a class="modal-trigger blue-text" href="#beta_invite_modal">Invite a friend</a></li>
  <li class="divider"></li>
  <li><%= link_to "Log Out", destroy_user_session_path, class:'blue-text', :method => :delete %></li>
</ul>

<% if user_signed_in? %>
  <li>
    <%= link_to root_url, class: 'dropdown-button', data: {activates:"dropdown1"} do%>
      <i class="material-icons right">arrow_drop_down</i><%= current_user.email%>
    <% end %>
  </li>
<% else %>
  <li><%= link_to "Log in", new_user_session_path %></li>
<% end %>
