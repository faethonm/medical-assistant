<% provide(:title, @patient_name) %>
<div class="container">
  <div class="row center">
    <h2 blue-text"><%= @patient_name %></h2>
    <%=image_tag avatar_url(@patient), class:'circle', size: 300 %>
  </div>
  <div class="card">
    <div class="row">
      <div class="col s6 offset-s3">
        <div class="row">
          <p>Name: <%= @patient.name %></p>
        </div>
        <div class="row">
          <p>Phone<%= @patient.phone %></p>
        </div>
        <div class="row">
          <p>Email <%= @patient.email %></p>
        </div>
          <div class="card-action center">
          <%= link_to 'Edit', edit_patient_path(@patient) %>
          <%= link_to 'New',  new_appointment_path %>
          <%= link_to 'Call', '#' %>
          <%= link_to 'Email', '#' %>
          </div>
      </div>
    </div>
  </div>
</div>
