<% provide(:title, 'Appointments') %>
<div class="container">
  <h2 class="row center blue-text">Appointments</h2>
  <div class="card">
    <div class="row">
      <div class="col s6 offset-s3">
        <%= form_for @appointment  do |f| %>

          <div class="row">
            <div class="input-field">
              <%= f.label :start_date ,class: "validate" %><br />
              <%= f.date_field :start_date, autofocus: true, required:true %>
            </div>
          </div>

          <div class="row">
            <div class="input-field">
              <%= f.label :end_date ,class: "validate" %><br />
              <%= f.date_field :end_date, autofocus: true, required:true %>
            </div>
          </div>

          <div class="row">
            <div class="input-field">
              <%= f.label :patient_id ,class: "validate" %><br />
              <%= f.number_field :patient_id, autofocus: true, required:true %>
            </div>
          </div>

          <div class="row">
            <div class="input-field">
              <%= f.label :description ,class: "validate" %><br />
              <%= f.text_field :description, autofocus: true, required:true %>
            </div>
          </div>

          <div class="card-action center">
            <button class="btn waves-effect waves-light">
              <%= f.submit "Add" do %>
              <i class="material-icons right">plus</i>
              <% end %>
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
